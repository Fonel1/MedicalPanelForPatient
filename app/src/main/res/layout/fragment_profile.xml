<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Fragments.HomeFragment">

    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/layout_user_information"
        android:visibility="visible"
        android:weightSum="4"
        android:padding="8dp"
        android:background="@color/lightblue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:src="@drawable/ic_baseline_account_circle_24"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center"/>
        </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        android:padding="4dp">

            <TextView
                android:layout_weight="1"
                android:padding="4dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Imię i nazwisko"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/txt_user_name"
                android:layout_weight="1"
                android:padding="4dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Imię i nazwisko"
                android:textSize="16sp"/>

    </LinearLayout>

    <View
        android:layout_marginTop="4dp"
        android:background="#add9e6"
        android:layout_width="match_parent"
        android:layout_height="2dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        android:padding="4dp">

        <TextView
            android:layout_weight="1"
            android:padding="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Adres zamieszkania"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/txt_user_city"
            android:layout_weight="1"
            android:padding="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Adres zamieszkania"
            android:textSize="16sp"/>

    </LinearLayout>

    <View
        android:layout_marginTop="4dp"
        android:background="#add9e6"
        android:layout_width="match_parent"
        android:layout_height="2dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        android:padding="4dp">

        <TextView
            android:layout_weight="1"
            android:padding="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Numer kontaktowy"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/txt_user_phone"
            android:layout_weight="1"
            android:padding="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Numer kontaktowy"
            android:textSize="16sp"/>

    </LinearLayout>

    <View
        android:layout_marginTop="4dp"
        android:background="#add9e6"
        android:layout_width="match_parent"
        android:layout_height="2dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        android:padding="4dp">

        <TextView
            android:layout_weight="1"
            android:padding="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Adres email"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/txt_user_mail"
            android:layout_weight="1"
            android:padding="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Adres email"
            android:textSize="16sp"/>

    </LinearLayout>

    <View
        android:layout_marginTop="4dp"
        android:background="#add9e6"
        android:layout_width="match_parent"
        android:layout_height="2dp" />

</LinearLayout>